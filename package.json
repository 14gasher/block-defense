    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.6.0",
    "mocha": "^6.2.2",
    "ws": "^7.2.0"
  }
